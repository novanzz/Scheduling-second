<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_join_group"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.scheduling.activity.JoinGrupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotogroup"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>


    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="170dp"
        android:layout_height="88dp"
        android:layout_toRightOf="@id/fotogroup"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:text="solatulllah"
            android:id="@+id/txtNama"
            android:layout_width="167dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="Join"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_container"
        android:layout_marginStart="24dp"
        android:onClick="Join"
        android:id="@+id/button2" />


</RelativeLayout>
