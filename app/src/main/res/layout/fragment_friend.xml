<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentFriend"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.scheduling.activity.JoinGrupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotouser"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/fotouser"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:text="solatulllah"
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom" />

        <TextView
            android:text="salaamulllah"
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top" />
    </LinearLayout>

</RelativeLayout>
